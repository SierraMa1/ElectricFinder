# frontend/Dockerfile

# --- Etapa 1: Construcci칩n (Build) ---
FROM node:18-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

# --- Etapa 2: Servidor de Producci칩n ---
FROM nginx:stable-alpine

# Copia los archivos est치ticos generados en la etapa anterior
COPY --from=builder /app/build /usr/share/nginx/html

# Copia la configuraci칩n de Nginx para servir estos archivos
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]